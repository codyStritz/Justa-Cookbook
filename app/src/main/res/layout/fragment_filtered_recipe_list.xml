<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.recipe.FilteredRecipeListFragment">


    <com.google.android.material.button.MaterialButton
        android:id="@+id/shopping_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="16dp"
        android:minHeight="0dp"
        android:text="@string/view_shopping_list"
        android:textColor="?attr/colorSecondary"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_shopping_cart_24"
        app:iconSize="16dp"
        app:iconTint="?attr/colorSecondary"
        app:layout_constraintEnd_toStartOf="@+id/clear_btn"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintHorizontal_chainStyle="spread_inside"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/clear_btn"
        style="@style/Widget.MaterialComponents.Button.TextButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:minHeight="0dp"
        android:text="@string/clear_all"
        android:textColor="@color/design_default_color_error"
        android:textSize="12sp"
        app:icon="@drawable/ic_baseline_clear_24"
        app:iconSize="16dp"
        app:iconTint="@color/design_default_color_error"
        app:layout_constraintBottom_toBottomOf="@+id/shopping_btn"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/shopping_btn"
        app:layout_constraintTop_toTopOf="@+id/shopping_btn" />

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        android:scrollbars="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/shopping_btn"
        tools:listitem="@layout/recipe_list_item" />


</androidx.constraintlayout.widget.ConstraintLayout>